@model FlightBookingWeb.Models.Account

@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-4">
    <h2 class="mb-4">👤 My Profile</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="Profile" method="post">
        <div class="form-group mb-3">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" class="form-control" readonly />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Gender" class="form-label">Gender</label>
            <select asp-for="Gender" class="form-control">
                <select asp-for="Gender" class="form-control">
                    <option value="true">Male</option>
                    <option value="false">Female</option>
                </select>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update Profile</button>
    </form>

    <hr class="my-4" />

    <h3>🧾 Booking History</h3>
    @if (Model.Invoices != null && Model.Invoices.Any())
    {
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Invoice ID</th>
                    <th>Issue Date</th>
                    <th>Flight</th>
                    <th>Seat</th>
                    <th>Price</th>
                    <th>Departure</th>
                    <th>Arrival</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var invoice in Model.Invoices)
                {
                    <tr>
                        <td>@invoice.InvoiceId</td>
                        <td>@invoice.IssueDate</td>
                        <td>@invoice.Ticket?.Flight?.Route?.DepartureAirport?.AirportName - @invoice.Ticket?.Flight?.Route?.ArrivalAirport?.AirportName</td>
                        <td>@invoice.Ticket?.SeatPosition</td>
                        <td>@invoice.Ticket?.Price</td>
                        <td>@invoice.Ticket?.Flight?.DepartureTime</td>
                        <td>@invoice.Ticket?.Flight?.ArrivalTime</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">You have no booking history.</p>
    }
</div>

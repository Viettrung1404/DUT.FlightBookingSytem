@model FlightBookingWeb.ViewModels.FlightViewModel

<div class="container mt-5">
    <h2 class="text-center">Search Flights</h2>
    <form asp-action="SearchResults" method="post" class="mt-4">
        <div class="row">
            <!-- Departure Airport -->
            <div class="col-md-6 mb-3">
                <label for="DepartureAirport" class="form-label">Departure Airport</label>
                <input type="text" class="form-control" id="DepartureAirport" name="DepartureAirport" placeholder="Enter departure city or airport" value="@Model.DepartureAirport" required>
            </div>

            <!-- Arrival Airport -->
            <div class="col-md-6 mb-3">
                <label for="ArrivalAirport" class="form-label">Arrival Airport</label>
                <input type="text" class="form-control" id="ArrivalAirport" name="ArrivalAirport" placeholder="Enter arrival city or airport" value="@Model.ArrivalAirport" required>
            </div>
        </div>

        <div class="row">
            <!-- Departure Date -->
            <div class="col-md-6 mb-3">
                <label for="DepartureOutBoardDate" class="form-label">Departure Date</label>
                <input type="date" class="form-control" id="DepartureOutBoardDate" name="DepartureOutBoardDate" value="@Model.DepartureOutBoardDate.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" required>
            </div>

            <!-- Return Date -->
            <div class="col-md-6 mb-3">
                <label for="DepartureReturnDate" class="form-label">Return Date (Optional)</label>
                <input type="date" class="form-control" id="DepartureReturnDate" name="DepartureReturnDate" value="@Model.DepartureReturnDate?.ToString("yyyy-MM-dd")" disabled>
            </div>
        </div>

        <div class="row">
            <!-- Passenger Count -->
            <div class="col-md-6 mb-3">
                <label for="PassengerCount" class="form-label">Number of Passengers</label>
                <input type="number" class="form-control" id="PassengerCount" name="PassengerCount"
                       placeholder="Enter number of passengers"
                       value="@(Model.PassengerCount == 0 ? 1 : Model.PassengerCount)"
                       min="1" max="10" required>
            </div>

            <!-- Round Trip -->
            <div class="col-md-6 mb-3">
                <label class="form-label">Trip Type</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="IsRoundTrip" name="IsRoundTrip" @(Model.IsRoundTrip ? "checked" : "") onchange="toggleReturnDate()">
                    <label class="form-check-label" for="IsRoundTrip">Round Trip</label>
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="row mt-4">
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary btn-lg">Search Flights</button>
            </div>
        </div>
    </form>
</div>

<script>
    function toggleReturnDate() {
        const isRoundTrip = document.getElementById('IsRoundTrip').checked;
        const returnDateInput = document.getElementById('DepartureReturnDate');
        returnDateInput.disabled = !isRoundTrip;
    }

    // Initialize the state on page load
    document.addEventListener('DOMContentLoaded', function () {
        toggleReturnDate();
    });
</script>

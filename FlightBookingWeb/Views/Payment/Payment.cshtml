@model FlightBookingWeb.ViewModels.PaymentViewModel

<div class="container mt-5">
    <h2 class="text-center">Complete Your Payment</h2>
    <div class="row">
        <!-- Payment Details -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Payment Details</h4>
                </div>
                <div class="card-body">
                    <p><strong>Amount:</strong> @Model.TotalAmount.ToString("C")</p>
                    <p><strong>Currency:</strong> USD</p>
                    <p><strong>Description:</strong> Flight Booking Payment</p>
                </div>
            </div>
        </div>

        <!-- PayPal Button -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4>Pay with PayPal</h4>
                </div>
                <div class="card-body text-center">
                    <form id="paypal-form" method="post" action="/booking/payment/create-paypal-order">
                        <input type="hidden" name="Amount" value="@Model.TotalAmount" />
                        <input type="hidden" name="Currency" value="USD" />
                        <input type="hidden" name="Description" value="Flight Booking Payment" />
                        <button type="submit" class="btn btn-primary btn-lg">Pay with PayPal</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model FlightBookingWeb.ViewModels.RouteViewModel

@{
    ViewData["Title"] = "Them";
    var airports = ViewBag.Airports as SelectList;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]">
    <div class="mb-3">
        <label class="form-label">San bay di</label>
        <select asp-for="DepartureAirportId" class="form-select" asp-items="airports">
            <option value="">-- Chon san bay di --</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">San bay den</label>
        <select asp-for="ArrivalAirportId" class="form-select" asp-items="airports">
            <option value="">-- Chon san bay den --</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Thoi gian bay</label>
        <input asp-for="Duration" class="form-control" type="time" />
    </div>

    <div class="mb-3">
        <label class="form-label">Gia co ban</label>
        <input asp-for="BasePrice" class="form-control" type="number" step="0.01" />
    </div>

    <button type="submit" class="btn btn-primary">Luu</button>
    <a asp-action="Index" class="btn btn-secondary">Huy</a>
</form>

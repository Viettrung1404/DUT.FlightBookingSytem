@model FlightBookingWeb.Models.FlightSchedule

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chỉnh sửa lịch bay";
}

@section Styles {
    <style>
        /* Container chính */
        .edit-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 30px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }

        /* Tiêu đề chính */
        h1 {
            color: #1a3c87;
            font-weight: 600;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Nhóm form */
        .form-group {
            margin-bottom: 20px;
        }

        /* Ô nhập liệu và dropdown */
        .form-control, .form-select {
            border-radius: 8px;
            padding: 12px;
            border: 1px solid #ced4da;
            transition: border-color 0.3s ease;
        }

            /* Hiệu ứng khi focus ô nhập liệu */
            .form-control:focus, .form-select:focus {
                border-color: #1a3c87;
                box-shadow: 0 0 8px rgba(26, 60, 135, 0.2);
            }

            /* Ô readonly */
            .form-control[readonly] {
                background: #f8f9fa;
                cursor: not-allowed;
            }

        /* Nhãn của ô nhập liệu */
        .control-label {
            font-weight: 500;
            color: #333;
            margin-bottom: 8px;
            display: block;
        }

        /* Thông báo lỗi */
        .text-danger {
            font-size: 0.875rem;
            margin-top: 5px;
        }

        /* Checkbox */
        .form-check {
            margin-bottom: 20px;
        }

        .form-check-label {
            font-weight: 500;
            color: #333;
        }

        /* Nút lưu */
        .btn-primary--edit {
            background: #1a3c87;
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            font-weight: 500;
            transition: background 0.3s ease;
            width: 100%;
            margin-bottom: 10px;
        }

            .btn-primary--edit:hover {
                background: #153074;
            }

        /* Nút hủy */
        .btn-secondary--edit {
            background: #6c757d;
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            font-weight: 500;
            transition: background 0.3s ease;
            width: 100%;
        }

            .btn-secondary--edit:hover {
                background: #5a6268;
            }

        /* Tiêu đề phụ */
        .form-header {
            color: #555;
            font-size: 1.5rem;
            margin-bottom: 20px;
            text-align: center;
        }

        /* Đường kẻ ngang */
        hr {
            border: 0;
            height: 1px;
            background: #e9ecef;
            margin: 20px 0;
        }

    </style>
}

<div class="edit-container">
    <h1>Chỉnh sửa lịch bay</h1>
    <h4 class="form-header">Cập nhật thông tin lịch bay</h4>
    <hr />
    <div class="row">
        <div class="col-12">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ScheduleId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="RouteId" class="control-label">Tuyến bay</label>
                    <select asp-for="RouteId" class="form-select" asp-items="@(ViewBag.Routes as SelectList)">
                        <option value="">-- Chọn tuyến bay --</option>
                    </select>
                    <span asp-validation-for="RouteId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AirplaneId" class="control-label">Máy bay</label>
                    <select asp-for="AirplaneId" class="form-select" asp-items="@(ViewBag.Airplanes as SelectList)">
                        <option value="">-- Chọn máy bay --</option>
                    </select>
                    <span asp-validation-for="AirplaneId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DepartureTime" class="control-label">Thời gian khởi hành</label>
                    <input asp-for="DepartureTime" class="form-control" type="datetime-local" value="@Model.DepartureTime.ToString("yyyy-MM-ddTHH:mm")" />
                    <span asp-validation-for="DepartureTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Thời gian đến dự kiến</label>
                    <input class="form-control" value="@Model.ArrivalTime.ToString("HH:mm")" readonly />
                    <span asp-validation-for="ArrivalTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Frequency" class="control-label">Tần suất</label>
                    <input asp-for="Frequency" class="form-control" placeholder="Nhập tần suất (VD: Hàng ngày, Hàng tuần)" />
                    <span asp-validation-for="Frequency" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <input class="form-check-input" asp-for="Active" type="checkbox" id="Active" />
                    <label class="form-check-label" for="Active">Kích hoạt lịch bay</label>
                </div>

                <div class="form-group form-check">
                    <input class="form-check-input" type="checkbox" name="updateFlights" id="updateFlights" value="true" />
                    <label class="form-check-label" for="updateFlights">Cập nhật thời gian cho các chuyến bay liên quan</label>
                    <input type="hidden" name="updateFlights" value="false" /> <!-- Đảm bảo gửi false nếu không check -->
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary--edit">Lưu thay đổi</button>
                    <a asp-action="Index" class="btn btn-secondary--edit">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Đặt giá trị selected cho dropdown RouteId và AirplaneId
            var routeId = '@Model.RouteId';
            if (routeId) {
                $('#RouteId').val(routeId);
            }

            var airplaneId = '@Model.AirplaneId';
            if (airplaneId) {
                $('#AirplaneId').val(airplaneId);
            }

            // Xử lý sự kiện thay đổi dropdown
            $('select').on('change', function () {
                var selectedValue = $(this).val();
                $(this).find('option').removeAttr('selected');
                $(this).find('option[value="' + selectedValue + '"]').attr('selected', 'selected');
            });
        });
    </script>
}
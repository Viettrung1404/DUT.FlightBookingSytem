@model FlightBookingWeb.Models.FlightSchedule

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Tạo lịch bay mới";
}

<h2 class="mb-4">Tạo lịch bay mới</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="RouteId" class="form-label">Tuyến bay</label>
        <select asp-for="RouteId" class="form-select" asp-items="@(ViewData["Routes"] as SelectList)">
            <option value="">-- Chọn tuyến bay --</option>
        </select>
        <span asp-validation-for="RouteId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AirplaneId" class="form-label">Máy bay</label>
        <select asp-for="AirplaneId" class="form-select" asp-items="ViewBag.Airplanes">
            <option value="">-- Chọn máy bay --</option>
        </select>
        <span asp-validation-for="AirplaneId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DepartureTime" class="form-label">Giờ khởi hành</label>
        <input asp-for="DepartureTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="DepartureTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Frequency" class="form-label">Tần suất</label>
        <input asp-for="Frequency" class="form-control" />
        <span asp-validation-for="Frequency" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input type="checkbox" class="form-check-input" id="Active" name="Active" value="true" @(Model?.Active == true ? "checked" : "") />
        <label class="form-check-label" for="Active">Kích hoạt</label>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model FlightBookingWeb.Models.Flight

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chỉnh sửa chuyến bay";
}

<h1 class="mb-4"><i class="bi bi-pencil-square"></i> Chỉnh sửa chuyến bay</h1>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var modelError in ViewData.ModelState)
            {
                foreach (var error in modelError.Value.Errors)
                {
                    <li><strong>@modelError.Key:</strong> @error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow rounded-4">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="FlightId" />

                    <div class="mb-3">
                        <label class="form-label">Lịch trình</label>
                        <input class="form-control" value="@ViewBag.ScheduleName" readonly />
                        <input type="hidden" asp-for="ScheduleId" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="DepartureDateTime" class="form-label">Thời gian khởi hành</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-clock-history"></i></span>
                            <input asp-for="DepartureDateTime" class="form-control" type="datetime-local" id="departure" />
                        </div>
                        <span asp-validation-for="DepartureDateTime" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ArrivalDateTime" class="form-label">Thời gian đến</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-clock"></i></span>
                            <input asp-for="ArrivalDateTime" class="form-control" type="datetime-local" id="arrival" />
                        </div>
                        <span asp-validation-for="ArrivalDateTime" class="text-danger" id="arrivalError"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Trạng thái</label>
                        <input asp-for="Status" class="form-control" placeholder="VD: Đã lên lịch, Trễ, Hủy..." />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-save2-fill"></i> Lưu thay đổi
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Hủy
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.querySelector("form").addEventListener("submit", function (e) {
            const departureInput = document.getElementById("departure");
            const arrivalInput = document.getElementById("arrival");
            const errorSpan = document.getElementById("arrivalError");

            const departure = new Date(departureInput.value);
            const arrival = new Date(arrivalInput.value);

            errorSpan.textContent = "";

            if (arrival < departure) {
                e.preventDefault();
                errorSpan.textContent = "❌ Thời gian đến không được nhỏ hơn thời gian khởi hành!";
                arrivalInput.focus();
            }
        });
    </script>
}

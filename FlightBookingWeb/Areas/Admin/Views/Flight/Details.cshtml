@model FlightBookingWeb.Models.Flight

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chi tiết chuyến bay";
}

@section Styles {
    <style>
        /* Container chính */
        .details-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 30px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }

        /* Tiêu đề chính */
        h1 {
            color: #1a3c87;
            font-weight: 600;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Tiêu đề phụ */
        .details-header {
            color: #555;
            font-size: 1.5rem;
            margin-bottom: 20px;
            text-align: center;
        }

        /* Đường kẻ ngang */
        hr {
            border: 0;
            height: 1px;
            background: #e9ecef;
            margin: 20px 0;
        }

        /* Định dạng danh sách chi tiết */
        .dl-details {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            font-size: 1.1rem;
        }

            .dl-details dt {
                font-weight: 500;
                color: #333;
                padding: 10px 0;
                border-bottom: 1px solid #e9ecef;
            }

            .dl-details dd {
                color: #555;
                padding: 10px 0;
                margin-bottom: 0;
                border-bottom: 1px solid #e9ecef;
            }

        /* Badge trạng thái */
        .badge {
            font-size: 0.875rem;
            padding: 6px 12px;
            border-radius: 12px;
        }

        /* Nút hành động */
        .action-buttons {
            text-align: center;
        }

        .btn-warning {
            background: #f39c12;
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            font-weight: 500;
            transition: background 0.3s ease;
            margin: 0 10px;
            color: #fff;
        }

            .btn-warning:hover {
                background: #e08e0b;
            }

        .back-link {
            color: #1a3c87;
            text-decoration: none;
            font-weight: 500;
            padding: 12px 30px;
            border-radius: 8px;
            transition: background 0.3s ease, color 0.3s ease;
            margin: 0 10px;
            display: inline-block;
        }

            .back-link:hover {
                background: #e9ecef;
                text-decoration: none;
            }

        /* Responsive */
        @@media (max-width: 768px) {
            .details-container

        {
            padding: 20px;
        }

        .dl-details dt, .dl-details dd {
            font-size: 0.875rem;
        }

        .action-buttons .btn-warning, .action-buttons .back-link {
            display: block;
            width: 100%;
            margin: 5px 0;
        }

        }
    </style>
}

<div class="details-container">
    <h1>Chi tiết chuyến bay</h1>
    <h4 class="details-header">Thông tin chuyến bay</h4>
    <hr />
    <dl class="dl-details row">
        <dt class="col-sm-4">Lịch trình</dt>
        <dd class="col-sm-8">@Model.Schedule?.Route?.DepartureAirport?.AirportName → @Model.Schedule?.Route?.ArrivalAirport?.AirportName</dd>
        <dt class="col-sm-4">Thời gian khởi hành</dt>
        <dd class="col-sm-8">@Model.DepartureDateTime.ToString("dd/MM/yyyy HH:mm")</dd>
        <dt class="col-sm-4">Thời gian đến</dt>
        <dd class="col-sm-8">@Model.ArrivalDateTime.ToString("dd/MM/yyyy HH:mm")</dd>
        <dt class="col-sm-4">Trạng thái</dt>
        <dd class="col-sm-8">
            <span class="badge bg-@(Model.Status == "Đang bay" ? "success" : Model.Status == "Hoãn" ? "warning" : "secondary")">
                @(string.IsNullOrEmpty(Model.Status) ? "Chờ xử lý" : Model.Status)
            </span>
        </dd>
    </dl>
    <div class="action-buttons">
        <a asp-action="Edit" asp-route-id="@Model.FlightId" class="btn btn-warning">Chỉnh sửa</a>
        <a asp-action="Index" class="back-link">Quay lại danh sách</a>
    </div>
</div>
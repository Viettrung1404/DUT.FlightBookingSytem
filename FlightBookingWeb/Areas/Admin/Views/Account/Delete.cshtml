@model FlightBookingWeb.Models.Account

@{
    ViewData["Title"] = "Delete Account";
}

<div class="container py-4">
    <h2 class="mb-4 text-danger">🗑️ Delete Account</h2>

    <div class="alert alert-warning">
        <h4>Are you sure you want to delete this account?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <dl class="row">
        <dt class="col-sm-3">Username</dt>
        <dd class="col-sm-9">@Model.Username</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Phone Number</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">Role</dt>
        <dd class="col-sm-9">@Model.Role</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AccountId" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancel</a>
    </form>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}

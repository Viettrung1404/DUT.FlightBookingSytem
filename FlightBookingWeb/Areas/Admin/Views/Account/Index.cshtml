@model IEnumerable<FlightBookingWeb.Areas.Admin.ViewModels.AccountViewModel>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quản lý tài khoản";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        /* Container chính */
        .container-fluid--create {
            padding: 30px;
            max-width: 1200px;
            margin: 0 auto;
        }

        h1 {
            color: #1a3c87;
            font-weight: 600;
            text-align: center;
            margin-bottom: 30px;
        }

        /* Thẻ chứa bảng */
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            background: #ffffff;
        }

        /* Tiêu đề thẻ */
        .card-header {
            background: #1a3c87;
            color: #fff;
            border-radius: 10px 10px 0 0;
            padding: 20px;
        }

            .card-header h3 {
                margin: 0;
                font-weight: 500;
                display: flex;
                align-items: center;
            }

        .card-body {
            padding: 20px;
        }

        /* Nút tạo mới */
        .btn-add {
            background: #1a3c87;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 500;
            transition: background 0.3s ease;
            margin-left: 20px;
        }

            .btn-add:hover {
                background: #1a3c87;
            }

        /* Bảng */
        .table {
            margin-bottom: 0;
            border-collapse: separate;
            border-spacing: 0;
            border-radius: 8px;
            overflow: hidden;
        }

            .table thead th {
                background: #1a3c87;
                color: #fff;
                border: none;
                padding: 12px;
                font-weight: 500;
                text-align: center;
                white-space: nowrap;
            }

            .table tbody tr {
                transition: background 0.2s ease;
            }

                .table tbody tr:hover {
                    background: #f1f3f5;
                }

            .table td {
                vertical-align: middle;
                padding: 12px;
                border: none;
                text-align: center;
            }

        /* Nút thao tác */
        .table-actions {
            white-space: nowrap;
        }

        .btn-sm {
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 0.875rem;
            margin: 0 3px;
            transition: all 0.3s ease;
        }

        .btn-info {
            background: #17a2b8;
            border: none;
            color: #fff;
        }

            .btn-info:hover {
                background: #138496;
            }

        .btn-warning {
            background: #f39c12;
            border: none;
            color: #fff;
        }

            .btn-warning:hover {
                background: #e08e0b;
            }

        .btn-danger {
            background: #dc3545;
            border: none;
            color: #fff;
        }

            .btn-danger:hover {
                background: #c82333;
            }

        /* Thông báo không có dữ liệu */
        .no-data {
            color: #555;
            font-style: italic;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .container-fluid--create {
                padding: 15px;
            }

            .card-header {
                padding: 15px;
            }

            .btn-add {
                width: 100%;
                margin-top: 10px;
            }

            .table-responsive {
                border: none;
            }

            .table th, .table td {
                font-size: 0.875rem;
            }

            .table-actions .btn-sm {
                display: inline-block;
                margin: 5px 2px;
            }
        }
    </style>
}

<div class="container-fluid--create">
    <div class="card shadow-sm">
        <h1>Danh sách tài khoản</h1>
        <div class="col-md-6">
            <a asp-action="Create" class="btn btn-add">
                <i class="fas fa-plus me-1"></i>Thêm tài khoản mới
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Tên đăng nhập</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Vai trò</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var account in Model)
                            {
                                <tr>
                                    <td>@account.Username</td>
                                    <td>@account.Email</td>
                                    <td>@(string.IsNullOrEmpty(account.PhoneNumber) ? "Không có" : account.PhoneNumber)</td>
                                    <td>@account.Role</td>
                                    <td class="table-actions">
                                        <a asp-action="Details" asp-route-id="@account.AccountId" class="btn btn-info btn-sm" title="Chi tiết">
                                            <i class="fas fa-eye"></i> Chi tiết
                                        </a>
                                        <a asp-area="Admin" asp-action="Edit" asp-route-id="@account.AccountId" class="btn btn-warning btn-sm" title="Sửa">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@account.AccountId" class="btn btn-danger btn-sm" title="Xóa" onclick="return confirm('Bạn có chắc muốn xóa tài khoản này?');">
                                            <i class="fas fa-trash-alt"></i> Xóa
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4 no-data">
                                    <i class="fas fa-info-circle me-2"></i>Chưa có tài khoản nào
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/vi.json'
                },
                columnDefs: [
                    { orderable: false, targets: 4 } // Vô hiệu hóa sắp xếp cột Thao tác
                ]
            });
        });
    </script>
}
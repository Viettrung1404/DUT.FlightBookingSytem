@model IEnumerable<FlightBookingWeb.Models.Account>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Accounts";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">👥 Manage Accounts</h2>
        <a asp-area="Admin" asp-controller="Account" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Add New Account
        </a>
    </div>

    <table class="table table-bordered table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>👤 Username</th>
                <th>📧 Email</th>
                <th>🔐 Role</th>
                <th class="text-center">⚙️ Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model)
            {
                <tr>
                    <td>@account.Username</td>
                    <td>@account.Email</td>
                    <td>@account.Role</td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-area="Admin" asp-controller="Account" asp-action="Details" asp-route-id="@account.AccountId" class="btn btn-info">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-area="Admin" asp-controller="Account" asp-action="Edit" asp-route-id="@account.AccountId" class="btn btn-warning">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <form method="post" asp-area="Admin" asp-controller="Account" asp-action="DeleteConfirmed" asp-route-id="@account.AccountId" onsubmit="return confirm('Are you sure you want to delete this account?');" class="d-inline">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}

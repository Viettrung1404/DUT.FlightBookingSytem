@model FlightBookingWeb.Models.Account

@{
    ViewData["Title"] = "Account Details";
}

<div class="container py-4">
    <h2 class="mb-4">👤 Account Details</h2>

    <dl class="row">
        <dt class="col-sm-3">Username</dt>
        <dd class="col-sm-9">@Model.Username</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Phone Number</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">Role</dt>
        <dd class="col-sm-9">@Model.Role</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.AccountId" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a>
    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back to List</a>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}

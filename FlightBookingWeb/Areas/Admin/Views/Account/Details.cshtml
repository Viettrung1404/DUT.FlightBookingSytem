@model FlightBookingWeb.Areas.Admin.ViewModels.AccountViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chi tiết tài khoản";
}

@section Styles{
    <style>
        /* Container chính */
        .details-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 30px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }

        /* Tiêu đề chính */
        h1 {
            color: #1a3c87;
            font-weight: 600;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Tiêu đề phụ */
        .details-header {
            color: #555;
            font-size: 1.5rem;
            margin-bottom: 20px;
            text-align: center;
        }

        /* Đường kẻ ngang */
        hr {
            border: 0;
            height: 1px;
            background: #e9ecef;
            margin: 20px 0;
        }

        /* Định dạng danh sách chi tiết */
        .dl-details {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            font-size: 1.1rem;
        }

            .dl-details dt {
                font-weight: 500;
                color: #333;
                padding: 10px 0;
                border-bottom: 1px solid #e9ecef;
            }

            .dl-details dd {
                color: #555;
                padding: 10px 0;
                margin-bottom: 0;
                border-bottom: 1px solid #e9ecef;
            }

        /* Văn bản không xác định */
        .text-muted {
            font-style: italic;
        }

        /* Nút hành động */
        .action-buttons {
            text-align: center;
        }

        .btn-warning {
            background: #f39c12;
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            font-weight: 500;
            transition: background 0.3s ease;
            margin: 0 10px;
            color: #fff;
        }

            .btn-warning:hover {
                background: #e08e0b;
            }

        .back-link {
            color: #1a3c87;
            text-decoration: none;
            font-weight: 500;
            padding: 12px 30px;
            border-radius: 8px;
            transition: background 0.3s ease, color 0.3s ease;
            margin: 0 10px;
            display: inline-block;
        }

            .back-link:hover {
                background: #e9ecef;
                text-decoration: none;
            }

        /* Responsive */
        @@media (max-width: 768px) {
            .details-container
            {
                padding: 20px;
            }

            .dl-details dt, .dl-details dd {
                font-size: 0.875rem;
            }

            .action-buttons .btn-warning, .action-buttons .back-link {
                display: block;
                width: 100%;
                margin: 5px 0;
            }
        }
    </style>
}

<div class="details-container">
    <h1>Chi tiết tài khoản</h1>
    <h4 class="details-header">Thông tin tài khoản</h4>
    <hr />
    <dl class="dl-details row">
        <dt class="col-sm-4">Tên đăng nhập</dt>
        <dd class="col-sm-8">@(Model.Username ?? "Không xác định")</dd>
        <dt class="col-sm-4">Email</dt>
        <dd class="col-sm-8">@(Model.Email ?? "Không xác định")</dd>
        <dt class="col-sm-4">Số điện thoại</dt>
        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Không xác định" : Model.PhoneNumber)</dd>
        <dt class="col-sm-4">Vai trò</dt>
        <dd class="col-sm-8">@(Model.Role == "Admin" ? "Quản trị viên" : Model.Role == "User" ? "Người dùng" : Model.Role ?? "Không xác định")</dd>
        <dt class="col-sm-4">Giới tính</dt>
        <dd class="col-sm-8">
            @if (Model.Gender.HasValue)
            {
                @(Model.Gender.Value ? "Nam" : "Nữ")
            }
            else
            {
                <span class="text-muted">Không xác định</span>
            }
        </dd>
    </dl>
    <div class="action-buttons">
        <a asp-action="Edit" asp-route-id="@Model.AccountId" class="btn btn-warning">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="back-link">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}
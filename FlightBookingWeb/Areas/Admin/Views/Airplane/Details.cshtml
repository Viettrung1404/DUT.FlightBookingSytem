@model FlightBookingWeb.Areas.Admin.ViewModels.AirplaneViewModel

@{
    ViewData["Title"] = "Chi tiết máy bay";
}

@section Styles {
    <style>
        /* Container chính */
        .details-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 30px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }

        /* Tiêu đề chính */
        h1 {
            color: #1a3c87;
            font-weight: 600;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Tiêu đề phụ */
        .details-header {
            color: #555;
            font-size: 1.5rem;
            margin-bottom: 20px;
            text-align: center;
        }

        /* Đường kẻ ngang */
        hr {
            border: 0;
            height: 1px;
            background: #e9ecef;
            margin: 20px 0;
        }

        /* Định dạng danh sách chi tiết */
        .dl-details {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

            .dl-details dt {
                font-weight: 500;
                color: #333;
                padding: 10px 0;
                border-bottom: 1px solid #e9ecef;
            }

            .dl-details dd {
                color: #555;
                padding: 10px 0;
                margin-bottom: 0;
                border-bottom: 1px solid #e9ecef;
            }

        /* Link hành động */
        .action-links {
            text-align: center;
        }

            .action-links a {
                color: #1a3c87;
                text-decoration: none;
                font-weight: 500;
                margin: 0 10px;
                padding: 8px 16px;
                border-radius: 6px;
                transition: background 0.3s ease, color 0.3s ease;
            }

                .action-links a.edit-link {
                    background: #f39c12;
                    color: #fff;
                }

                    .action-links a.edit-link:hover {
                        background: #e08e0b;
                    }

                .action-links a.back-link {
                    background: #17a2b8;
                    color: #fff;
                }

                    .action-links a.back-link:hover {
                        background: #138496;
                    }

        /* Responsive */
    </style>
}

<div class="details-container">
    <h1>Chi tiết máy bay</h1>
    <h4 class="details-header">Thông tin máy bay</h4>
    <hr />
    <dl class="dl-details row">
        <dt class="col-sm-4">Tên máy bay</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.AirplaneName)</dd>

        <dt class="col-sm-4">Loại máy bay</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.AirplaneType)</dd>

        <dt class="col-sm-4">Tổng số ghế</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.TotalSeats)</dd>

        <dt class="col-sm-4">Số ghế phổ thông</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.EconomySeats)</dd>

        <dt class="col-sm-4">Số ghế thương gia</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.BusinessSeats)</dd>

        <dt class="col-sm-4">Năm sản xuất</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.ManufactureYear)</dd>

        <dt class="col-sm-4">Trạng thái</dt>
        <dd class="col-sm-8">
            @(Model.Status == "Active" ? "Hoạt động" : Model.Status == "Deleted" ? "Đã xóa" : Model.Status)
        </dd>
    </dl>
    <div class="action-links">
        <a asp-action="Edit" asp-route-id="@Model?.AirplaneId" class="edit-link">Chỉnh sửa</a>
        <a asp-action="Index" class="back-link">Quay lại danh sách</a>
    </div>
</div>
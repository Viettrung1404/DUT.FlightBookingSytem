@model FlightBookingWeb.ViewModels.SearchViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Tra cứu vé và tài khoản";
    var tickets = ViewBag.Tickets as List<FlightBookingWeb.ViewModels.SearchViewModel>;
    var accounts = ViewBag.Accounts as List<FlightBookingWeb.ViewModels.SearchViewModel>;
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold text-primary border-bottom pb-2">
                <i class="fas fa-search me-2"></i>Hệ thống tra cứu
            </h2>
        </div>
    </div>

    <!-- Main Content - Side by Side Tables -->
    <div class="row">
        <!-- Ticket Search Section - Left Column -->
        <div class="col-md-6 mb-4 mb-md-0">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light">
                    <h3 class="h5 mb-0 fw-bold text-primary">
                        <i class="fas fa-ticket-alt me-2"></i>Tra cứu vé máy bay
                    </h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <form method="get" class="mb-4">
                        <div class="input-group">
                            <input type="text" name="ticketKeyword" class="form-control"
                                   placeholder="Nhập tên,ID chuyến bay hoặc ngày đặt...">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-1"></i> Tìm kiếm
                            </button>
                        </div>
                    </form>

                    <div class="table-responsive flex-grow-1">
                        <table class="table table-bordered table-hover mb-0">
                            <thead class="table-primary">
                                <tr>
                                    <th>Mã vé</th>
                                    <th>ID chuyến bay</th>
                                    <th>Khách hàng</th>
                                    <th>Ngày đặt</th>
                                    <th>Giá (VNĐ)</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (tickets?.Any() == true)
                                {
                                    foreach (var item in tickets)
                                    {
                                        <tr>
                                            <td class="fw-bold">@item.TicketId</td>
                                            <td>@item.FlightID</td>
                                            <td>@item.Username</td>
                                            <td>@item.BookingDate?.ToString("dd/MM/yyyy")</td>
                                            <td class="text-end fw-bold text-success">@item.Price.ToString("N0")</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(item.Status)">
                                                    @item.Status
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4 text-muted">
                                            <!-- cập nhật colspan -->
                                            Không tìm thấy vé nào
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Account Search Section - Right Column -->
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light">
                    <h3 class="h5 mb-0 fw-bold text-success">
                        <i class="fas fa-users me-2"></i>Tra cứu tài khoản
                    </h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <form method="get" class="mb-4">
                        <div class="input-group">
                            <input type="text" name="accountKeyword" class="form-control"
                                   placeholder="Nhập tên, email hoặc số điện thoại...">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-search me-1"></i> Tìm kiếm
                            </button>
                        </div>
                    </form>

                    <div class="table-responsive flex-grow-1">
                        <table class="table table-bordered table-hover mb-0">
                            <thead class="table-success">
                                <tr>
                                    <th>Mã TK</th>
                                    <th>Tên</th>
                                    <th>Email</th>
                                    <th>Số điện thoại</th> <!-- thêm dòng này -->
                                    <th>Vai trò</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (accounts?.Any() == true)
                                {
                                    foreach (var acc in accounts)
                                    {
                                        <tr>
                                            <td class="fw-bold">@acc.AccountId</td>
                                            <td>@acc.Username</td>
                                            <td>@acc.Email</td>
                                            <td>@acc.PhoneNumber</td> <!-- thêm dòng này -->
                                            <td>
                                                <span class="badge @GetRoleBadgeClass(acc.Role)">
                                                    @acc.Role
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">
                                            Không tìm thấy tài khoản
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Confirmed" => "bg-success-light",
            "Pending" => "bg-warning-light",
            "Cancelled" => "bg-danger-light",
            _ => "bg-secondary"
        };
    }

    string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Admin" => "bg-purple-light",
            "Staff" => "bg-info",
            _ => "bg-primary"
        };
    }
}
@model FlightBookingWeb.ViewModels.SearchViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Tra cứu vé và tài khoản";
    var tickets = ViewBag.Tickets as List<FlightBookingWeb.ViewModels.SearchViewModel>;
    var accounts = ViewBag.Accounts as List<FlightBookingWeb.ViewModels.SearchViewModel>;
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold text-primary border-bottom pb-2">
                <i class="fas fa-search me-2"></i>Hệ thống tra cứu
            </h2>
        </div>
    </div>

    <!-- Main Content - Side by Side Tables -->
    <div class="row">
        <!-- Ticket Search Section - Left Column -->
        <div class="col-md-6 mb-4 mb-md-0">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light">
                    <h3 class="h5 mb-0 fw-bold text-primary">
                        <i class="fas fa-ticket-alt me-2"></i>Tra cứu vé máy bay
                    </h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <form method="get" class="mb-4">
                        <div class="input-group">
                            <input type="text" name="ticketKeyword" class="form-control"
                                   placeholder="Nhập tên,ID chuyến bay hoặc ngày đặt...">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-1"></i> Tìm kiếm
                            </button>
                        </div>
                    </form>

                    <div class="table-responsive flex-grow-1">
                        <table class="table table-bordered table-hover mb-0">
                            <thead class="table-primary">
                                <tr>
                                    <th>Mã vé</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày đặt</th>
                                    <th>Giá (VNĐ)</th>
                                    <th>Khách hàng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (tickets?.Any() == true)
                                {
                                    foreach (var item in tickets)
                                    {
                                        <tr>
                                            <td class="fw-bold">@item.TicketId</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(item.Status)">
                                                    @item.Status
                                                </span>
                                            </td>
                                            <td>@item.BookingDate?.ToString("dd/MM/yyyy")</td>
                                            <td class="text-end fw-bold text-success">@item.Price.ToString("N0")</td>
                                            <td>@item.Username</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">
                                            Không tìm thấy vé nào
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Account Search Section - Right Column -->
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light">
                    <h3 class="h5 mb-0 fw-bold text-success">
                        <i class="fas fa-users me-2"></i>Tra cứu tài khoản
                    </h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <form method="get" class="mb-4">
                        <div class="input-group">
                            <input type="text" name="accountKeyword" class="form-control"
                                   placeholder="Nhập tên, email hoặc số điện thoại...">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-search me-1"></i> Tìm kiếm
                            </button>
                        </div>
                    </form>

                    <div class="table-responsive flex-grow-1">
                        <table class="table table-bordered table-hover mb-0">
                            <thead class="table-success">
                                <tr>
                                    <th>Mã TK</th>
                                    <th>Tên</th>
                                    <th>Email</th>
                                    <th>Số điện thoại</th> <!-- thêm dòng này -->
                                    <th>Vai trò</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (accounts?.Any() == true)
                                {
                                    foreach (var acc in accounts)
                                    {
                                        <tr>
                                            <td class="fw-bold">@acc.AccountId</td>
                                            <td>@acc.Username</td>
                                            <td>@acc.Email</td>
                                            <td>@acc.PhoneNumber</td> <!-- thêm dòng này -->
                                            <td>
                                                <span class="badge @GetRoleBadgeClass(acc.Role)">
                                                    @acc.Role
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">
                                            Không tìm thấy tài khoản
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        /* Card height adjustment */
        .card {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .card-body {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .table-responsive {
            flex: 1;
            min-height: 300px;
        }

        /* Other existing styles remain the same */
        .btn {
            font-weight: 500;
            padding: 0.5rem 1rem;
            transition: all 0.2s;
            border: none;
        }

        .btn-primary {
            background-color: #3a7bd5;
        }

            .btn-primary:hover {
                background-color: #2c65c0;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(58, 123, 213, 0.2);
            }

        .btn-success {
            background-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(40, 167, 69, 0.2);
            }

        /* Badge styles */
        .badge {
            padding: 0.5em 0.8em;
            font-size: 0.85em;
            font-weight: 500;
            border-radius: 0.25rem;
        }

        .bg-success-light {
            background-color: #d4edda;
            color: #155724;
        }

        .bg-warning-light {
            background-color: #fff3cd;
            color: #856404;
        }

        .bg-danger-light {
            background-color: #f8d7da;
            color: #721c24;
        }

        .bg-purple-light {
            background-color: #e2d4f0;
            color: #4a2b7a;
        }

        /* Table styles */
        .table th {
            font-weight: 600;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            padding: 1rem;
        }

        .table td {
            padding: 0.75rem;
            vertical-align: middle;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.03);
        }

        /* Card styles */
        .card {
            border-radius: 0.5rem;
            border: 1px solid rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            padding: 1rem 1.5rem;
        }
    </style>
}

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Confirmed" => "bg-success-light",
            "Pending" => "bg-warning-light",
            "Cancelled" => "bg-danger-light",
            _ => "bg-secondary"
        };
    }

    string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Admin" => "bg-purple-light",
            "Staff" => "bg-info",
            _ => "bg-primary"
        };
    }
}